#
# Create the krusader repository
#

create repository krusader_sf
end repository

match /branches/trunk/krusader_kde3/
  repository krusader_sf
  branch kde3
end match

match /trunk/krusader_kde4/
  repository krusader_sf
  branch master
end match

# Tags
match /tags/krusader-([^/]+)/krusader_kde4/
  repository krusader_sf
  branch refs/tags/v\1
  annotated true
end match

match /tags/krusader-2.0.0-beta1/$
  action recurse
end match

match /tags/krusader-([^/]+)/
  repository krusader_sf
  branch refs/tags/v\1
  annotated true
  min revision 6000
end match

match /tags/krusader-2.0.0-beta2/$
  action recurse
end match

match /tags/krusader-2.0.0/$
  action recurse
end match

# Ignore everything else
match /
end match

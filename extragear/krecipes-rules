end match

match /tags/krecipes/1.0-beta1/utils/doc/krecipes/
  # This is a handbook tagging, ignore.
  # NOTE: the 1.0-beta1 and 1.0-beta2 tags should be created manually.
end match

match /tags/krecipes/1.0-beta1/utils/krecipes/
  repository krecipes
  branch 1.0
end match



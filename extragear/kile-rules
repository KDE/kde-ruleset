#
# Create the kile repository
#
create repository kile
end repository

# Ignore some upheaval in KDE's SVN history.
match /
  min revision 409202
  max revision 409210
end match
match /
  min revision 411973
  max revision 411973
end match

match /trunk/kdeextragear-2/kile/
  repository kile
  branch master
end match

match /trunk/kdeextragear-2/doc/kile/
  repository kile
  prefix doc/
  branch master
end match

match /trunk/extragear/office/kile/
  repository kile
  branch master
end match

match /trunk/extragear/office/doc/kile/
  repository kile
  prefix doc/
  branch master
end match

match /branches/extragear/kde3/office/kile/
  repository kile
  branch master
  max revision 740242
end match

match /branches/extragear/kde3/office/doc/kile/
  repository kile
  prefix doc/
  branch master
  max revision 740242
end match

match /branches/extragear/kde3/office/kile/
  repository kile
  branch kde3
end match

match /branches/extragear/kde3/office/doc/kile/
  repository kile
  prefix doc/
  branch kde3
end match

# Branches

match /branches/branch_katepart_testing/kdeextragear-2/kile
  repository kile
  branch branch_katepart_testing
end match

match /branches/branch_1_6/kdeextragear-2/kile/
  repository kile
  branch branch_1_6
end match

match /branches/branch_1_6/kdeextragear-2/kile/doc/
  repository kile
  prefix doc/
  branch branch_1_6
end match

match /branches/kile_1_7_branch/kdeextragear-2/kile/
  repository kile
  branch 1.7
end match

match /branches/kile_1_7_branch/kdeextragear-2/doc/
  repository kile
  prefix doc/
  branch 1.7
end match

match /branches/kile/1.8/
  repository kile
  branch 1.8
end match

match /branches/kile/1.9/
  repository kile
  branch 1.9
end match

match /branches/kile/1.9/doc/kile/
  repository kile
  prefix doc/
  branch 1.9
end match

match /branches/extragear/kde3/office/kile
    action recurse
end match

match /(branches|tags)/kile/([^/])/
    action recurse
end match

# Tags
match /tags/kile/([^/]+)/
  repository kile
  branch refs/tags/v\1
  annotated true
end match

# Ignore everything else
match /
end match

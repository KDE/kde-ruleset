create repository kplayer
end repository

# Import KDE3 codebase
match /trunk/kdeextragear-3/kplayer/
  repository kplayer
  branch master
end match

match /trunk/kdeextragear-3/doc/kplayer/
  repository kplayer
  prefix doc/
  branch master
end match

match /trunk/extragear/multimedia/kplayer/
  repository kplayer
  branch master
  min revision 409210
  max revision 664319
end match


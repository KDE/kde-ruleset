create repository juk
end repository

match /trunk/(KDE/)?kdemultimedia/juk/
    repository juk
    branch master
    min revision 309
end match

match /trunk/(KDE/)?kdemultimedia/docs?/juk/
	repository juk
	branch master
	prefix doc/
end match

match /tags/KDE/([0-9]+\.[0-9]+\.[0-9]+[aA]?)/kdemultimedia/juk/
	repository juk
	branch refs/tags/v\1
	annotated true
end match

match /tags/KDE/(4\.5\.3-test)/kdemultimedia/juk/
	repository juk
	branch refs/tags/v\1
	annotated true
end match

match /tags/KDE/([0-9]+\.[0-9]+)/kdemultimedia/juk/
	repository juk
	branch refs/tags/v\1
	annotated true
end match

# create branches in each sub-repository
match /branches/KDE/([0-9]\.[0-9])/kdemultimedia/juk/$
	branch KDE/\1
	repository juk
end match

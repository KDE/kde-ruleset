declare REPO=audiocd-kio
declare APP=kioslave/audiocd

create repository ${REPO}
end repository

include ../../common-kde-ignores

# kio_audiocd started in kdebase in r71925.
# It moved to kdemultimedia in r157422, although it remained in
# kdebase version branches until r195119 (v3.0.5a release/tag).

# BEGIN kdebase

declare MODULE=kdebase/kioslave/audiocd
include ../../common-kde-tags-rules

match /trunk/kdebase/kioslave/audiocd/
    repository ${REPO}
    branch master
end match

declare MODULE_RECURSE=(kdebase/(kioslave/)?)?

match /(branches|tags)/[^/]+/${MODULE_RECURSE}$
  action recurse
end match
match /(branches|tags)/KDE/[^/]+/${MODULE_RECURSE}$
  action recurse
end match

match /branches/(?:__)?KDE_(\d+)_(\d+)_BRANCH/kdebase/${APP}/
    repository ${REPO}
    branch KDE/\1.\2
end match
match /branches/KDE/(\d+)\.(\d+)/kdebase/${APP}/
    repository ${REPO}
    branch KDE/\1.\2
end match

# END kdebase

# BEGIN kdemultimedia

declare MODULE_RECURSE=(kdemultimedia/)?

match /trunk/(KDE/)?kdemultimedia/doc/${APP}/
    repository ${REPO}
    branch master
    prefix doc/
end match

match /trunk/(KDE/)?kdemultimedia/${APP}/
    repository ${REPO}
    branch master
    max revision 1288300 # Removed from SVN
end match

match /branches/KDE_\d+_\d+_BRANCH/${MODULE_RECURSE}$
  action recurse
end match
match /tags/KDE_[^/]+/${MODULE_RECURSE}$
  action recurse
end match
match /(branches|tags)/KDE/[^/]+/${MODULE_RECURSE}$
  action recurse
end match

declare MODULE=kdemultimedia/${APP}
include ../../common-kde-tags-rules

# kde feature branches
include ../../feature-branches

match /branches/KDE_(\d+)_(\d+)_BRANCH/kdemultimedia/${APP}/
    repository ${REPO}
    branch KDE/\1.\2
end match
match /branches/KDE/(\d+)\.(\d+)/kdemultimedia/${APP}/
    repository ${REPO}
    branch KDE/\1.\2
end match

match /branches/KDE_(\d+)_(\d+)_BRANCH/kdemultimedia/doc/${APP}/
    repository ${REPO}
    branch KDE/\1.\2
    prefix doc/
end match
match /branches/KDE/(\d+)\.(\d+)/kdemultimedia/doc/${APP}/
    repository ${REPO}
    branch KDE/\1.\2
    prefix doc/
end match

# END kdemultimedia

match /
end match

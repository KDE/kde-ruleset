create repository strigi-analyzers
end repository

match /trunk/(KDE/)?kdemultimedia/strigi-analyzer/
    repository strigi-analyzers
    branch master
    min revision 677897
end match

match /trunk/KDE/kdemultimedia/kfile-plugins/
	repository strigi-analyzers
	branch master
	max revision 677877
	min revision 123278
end match

match /tags/KDE/([0-9]+\.[0-9]+\.[0-9]+[aA]?)/kdemultimedia/kfile-plugins/
	repository strigi-analyzers
	branch refs/tags/v\1
	annotated true
end match

match /tags/KDE/(4\.5\.3-test)/kdemultimedia/strigi-analyzer/
	repository strigi-analyzers
	branch refs/tags/v\1
	annotated true
end match

match /tags/KDE/([0-9]+\.[0-9]+)/kdemultimedia/strigi-analyzer/
	repository strigi-analyzers
	branch refs/tags/v\1
	annotated true
end match

match /tags/KDE/([0-9]+\.[0-9]+)/kdemultimedia/kfile-plugins/
	repository strigi-analyzers
	branch refs/tags/v\1
	annotated true
end match

# create branches in each sub-repository
match /branches/KDE/([0-9]\.[0-9])/kdemultimedia/strigi-analyzer/$
	branch KDE/\1
	repository strigi-analyzers
end match

match /branches/KDE/([0-9]\.[0-9])/kdemultimedia/kfile-plugins/$
	branch KDE/\1
	repository strigi-analyzers
end match

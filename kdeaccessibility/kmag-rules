create repository kdeaccessibility/kmag
end repository

declare NAMES=kmag
declare REPO=kmag
include common-kdeaccessibility-rules

# KMag releases
match /tags/KMAG_([^/]+)/(kdeaccessibility/)?$
  action recurse
end match


# Rules for kdesupport/strigi
# Author: Christophe Giboudeaux <cgiboudeaux@gmail.com>

##### Create the repository #####
#declare REPO=strigi
create repository ${REPO}
end repository

##### Ignore rules #####

##### Main Rules #####
match /trunk/kdesupport/strigi/
    repository ${REPO}
    branch master
    min revision 919030
end match

match /trunk/kdesupport/strigi/
    repository ${REPO}
    branch master
    max revision 919022
end match

match /trunk/playground/base/strigi/
    repository ${REPO}
    branch master
    max revision 637788
    min revision 551677
end match

match /trunk/playground/base/kitten/
    repository ${REPO}
    branch master
    max revision 551677
    min revision 547576
end match

match /branches/work/kde4/playground/libs/archivereader/
    repository ${REPO}
    branch master
    max revision 547576
    min revision 526249
end match

##### Branches #####
match /branches/strigi/([^/]+)/
    repository ${REPO}
    branch \1
end match

match /branches/work/(strigi-reorg)/
    repository ${REPO}
    branch \1
end match

##### Tags #####
match /tags/strigi/strigi/strigi-(0.6.4)/
    repository ${REPO}
    branch refs/tags/v\1
end match

match /tags/strigi/strigi/([^/]+)/
    repository ${REPO}
    branch refs/tags/v\1
end match

##### ignore everything else #####
match /
end match
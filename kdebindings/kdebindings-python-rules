create repository KDE/kdebindings-python
end repository

include common-ignores

match /trunk/(KDE/)?kdebindings/python/
    repository KDE/kdebindings-python
    branch master
end match

# note the questionmark! this matches both 'lib' and 'libs' (it was renamed)
match /trunk/koffice/libs?/kross/python/
    repository KDE/kdebindings-python
    branch master
    prefix krosspython/
end match

match /trunk/koffice/kexi/scriptingcore/python/
    repository KDE/kdebindings-python
    branch master
    prefix krosspython/
end match

match /trunk/koffice/kexi/scripting/python/
    repository KDE/kdebindings-python
    branch master
    prefix krosspython/
end match

#
# recursion
#
match /(branches|tags)/(KDE/)?([^/]+)/$
    action recurse
end match

match /(branches|tags)/(KDE/)?([^/]+)/kdebindings/$
    action recurse
end match

#
# branches
#

declare repo=KDE/kdebindings-python
declare dir=kdebindings/python/

include branch-rules

#
# ignore everything else
#
match /
end match

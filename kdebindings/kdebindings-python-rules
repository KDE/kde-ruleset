create repository KDE/kdebindings-python
end repository

include common-ignores

# ignore krosspython

match /trunk/KDE/kdebindings/python/krosspython/
end match
match /(branches|tags)/(KDE/)?([^/]+)/kdebindings/python/krosspython/
end match

# main rules

match /trunk/(KDE/)?kdebindings/python/
    repository KDE/kdebindings-python
    branch master
end match

#
# recursion
#
match /(branches|tags)/(KDE/)?([^/]+)/$
    action recurse
end match

match /(branches|tags)/(KDE/)?([^/]+)/kdebindings/$
    action recurse
end match

#
# branches
#

declare repo=KDE/kdebindings-python
declare dir=kdebindings/python/
declare prefix=/

include branch-rules

#
# ignore everything else
#
match /
end match

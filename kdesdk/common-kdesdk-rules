include ../common-kde-ignores

match /(branches|tags)/[^/]+/${MODULE_RECURSE|}$
  action recurse
end match
match /(branches|tags)/KDE/[^/]+/${MODULE_RECURSE|}$
  action recurse
end match

include ../common-kde-tags-rules

#get the application branches
match /branches/(?:__)?KDE_(\d+)_(\d+)_BRANCH/${MODULE}/
    repository ${REPO}
    branch KDE/\1.\2
    max revision 409201
end match
match /branches/KDE/(\d+)\.(\d+)/${MODULE}/
    repository ${REPO}
    branch KDE/\1.\2
end match
match /branches/([^/]+)/${MODULE}/
    repository ${REPO}
    branch \1
end match

#and then the doc prefix for branches
declare MODULE_DOC=kdesdk/doc/${NAMES}

match /branches/(?:__)?KDE_(\d+)_(\d+)_BRANCH/${MODULE_DOC}/
    repository ${REPO}
    branch KDE/\1.\2
    prefix doc/
    max revision 409201
end match
match /branches/KDE/(\d+)\.(\d+)/${MODULE_DOC}/
    repository ${REPO}
    prefix doc/
    branch KDE/\1.\2
end match
match /branches/([^/]+)/${MODULE_DOC}/
    repository ${REPO}
    prefix doc/
    branch \1
end match

# during this time(rev 1435 - 409202), kdesdk was directly under trunk
match /trunk/kdesdk/${NAMES}/
  repository ${REPO}
  branch master
  max revision 409202
end match
match /trunk/kdesdk/doc/${NAMES}/
  repository ${REPO}
  branch master
  prefix doc/
  max revision 409202
end match

# the rest of the time kdesdk was under trunk/KDE
match /trunk/KDE/kdesdk/${NAMES}/
  repository ${REPO}
  branch master
  min revision 409203
end match
match /trunk/KDE/kdesdk/doc/${NAMES}/
  repository ${REPO}
  branch master
  prefix doc/
  min revision 409203
end match

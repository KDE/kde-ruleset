match /trunk/extragear/sdk/kdevelop-plugins/(php|php-docs|upload)/
  repository kdevelop-\1
  branch master
end match

match /trunk/kdereview/kdevelop-(php|php-docs)/
  repository kdevelop-\1
  branch master
end match

match /trunk/kdereview/controlflowgraph/
  repository kdevelop-controlflowgraph
  branch master
end match

match /trunk/playground/devtools/kdevelop4-extra-plugins/(php|php-docs|css|executescript|executebrowser|xdebug|crossfire|ruby|git|vcsprojectintegration|controlflowgraph|java|python)/
  repository kdevelop-\1
  branch master
end match

match /trunk/(extragear/sdk/|KDE/kdewebdev/)quanta/plugins/upload/
  repository kdevelop-upload
  branch master
end match

match /trunk/(extragear/sdk/|KDE/kdewebdev/)kdevplatform/plugins/git/
  repository kdevelop-git
  branch master
end match

match /trunk/(extragear/sdk/|KDE/kdewebdev/)kdevelop/languages/(ruby|java)/
  repository kdevelop-\1
  branch master
end match

match /branches/work/kdev-pg_python_parser/
  #subdirectory; does this work?
  repository kdevelop-python/kdev-pg_python_parser

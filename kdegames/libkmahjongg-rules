create repository libkmahjongg
end repository

include ../common-kde-ignores

declare REPO=libkmahjongg

match /trunk/KDE/kdegames/libkmahjongg/
    repository libkmahjongg
    branch master
end match

match /branches/KDE/\d+\.\d+/(kdegames/)?$
  action recurse
end match

match /tags/(KDE/)?[^/]+/(kdegames/)?$
  action recurse
end match

# Get tags
match /tags/KDE/(\d+)\.(\d+)/kdegames/libkmahjongg/
    repository libkmahjongg
    branch refs/tags/v\1.\2.0
    annotated true
end match
match /tags/KDE/(\d+)\.(\d+)\.(\d+)/kdegames/libkmahjongg/
    repository libkmahjongg
    branch refs/tags/v\1.\2.\3
    annotated true
end match

match /branches/KDE/(\d+)\.(\d+)/kdegames/libkmahjongg/
    repository libkmahjongg
    branch KDE/\1.\2
end match

declare MODULE_RECURSE=(kdegames/)?
declare MODULE=kdegames/libkmahjongg

# ignore the following feature-branches without changes for libkmahjongg
match /branches/work/kde4_jobflags/
end match
match /branches/work/kparts_urlargs_split/
end match
match /branches/work/kmainwindow-decoupling-branch/
end match
match /branches/work/kinstance-redesign/
end match
match /branches/work/kaction-cleanup-branch/
end match
match /branches/work/kde4_kconfig/
end match

# use all other feature branches
include ../feature-branches

include ../common-kde-tags-rules

match /
end match

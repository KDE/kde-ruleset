# Created by Parker Coates <parker.coates@kdemail.net>
#
# KSquares is a new-ish application, so run svn2git with the following option:
#    --resume-from=616138
#
# These rules are 100% copied from killbots-rules, so if you find a mistake here,
# please also fix it there.

# Create the ksquares repository
create repository ksquares
end repository

# Set the REPO and MODULE variables, used by some included rules
declare REPO=ksquares
declare MODULE=kdegames/ksquares

# Ignore some things that are known to cause trouble
include ../common-kde-ignores

# Get sources and docs from playground
match /trunk/playground/games/ksquares/
    repository ksquares
    branch master
end match
match /trunk/playground/games/doc/ksquares/
    repository ksquares
    branch master
    prefix doc/
end match

# Get sources and docs from kdereview
match /trunk/kdereview/ksquares/
    repository ksquares
    branch master
end match
match /trunk/kdereview/doc/ksquares/
    repository ksquares
    branch master
    prefix doc/
end match

# Get sources and docs from the kdegames module
match /trunk/KDE/kdegames/ksquares/
    repository ksquares
    branch master
end match
match /trunk/KDE/kdegames/doc/ksquares/
    repository ksquares
    branch master
    prefix doc/
end match

# Recurse into branch and tag changes that may have affected us
match /(branches|tags)/KDE/\d+[^/]+/(kdegames/)?$
  action recurse
end match

# Get sources and docs from branches
match /branches/KDE/(\d+)\.(\d+)/kdegames/ksquares/
    repository ksquares
    branch KDE/\1.\2
end match
match /branches/KDE/(\d+)\.(\d+)/kdegames/doc/ksquares/
    repository ksquares
    branch KDE/\1.\2
    prefix doc/
end match

# Get tags
match /tags/KDE/(\d+)\.(\d+)/kdegames/ksquares/
    repository ksquares
    branch refs/tags/v\1.\2.0
    annotated true
end match
match /tags/KDE/(\d+)\.(\d+)\.(\d+)/kdegames/ksquares/
    repository ksquares
    branch refs/tags/v\1.\2.\3
    annotated true
end match

# Some tag stuff
include ../common-kde-tags-rules

# Ignore everything else
match /
end match
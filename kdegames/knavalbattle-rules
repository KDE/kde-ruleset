# Created by Frederik Schwarzer <schwarzer@kde.org>
#
# KNavalBattle's history starts at r69973 as kbattleship.
# To save a few revisions, you can run it from there:
#    --resume-from=69973

create repository knavalbattle
end repository

declare REPO=knavalbattle
declare MODULE=kdegames/knavalbattle

include ../common-kde-ignores


### Master ###
# KNavalBattle has lived in
# /trunk/kdegames/kbattleship/ (r69973 - r401169)
# /trunk/KDE/kdegames/kbattleship/ (r409203 - 646682)
match /trunk/(KDE/)?kdegames/kbattleship/
    repository knavalbattle
    branch master
end match

# Documentation has lived in
# /trunk/kdegames/doc/kbattleship/ (r88116 - r392875)
# /trunk/KDE/kdegames/doc/kbattleship/ (r409203 - today)
match /trunk/(KDE/)?kdegames/doc/kbattleship/
    repository knavalbattle
    branch master
    prefix doc/
end match


# Recurse into branch and tag changes that may have affected us
match /(branches|tags)/[^/]+/(kdegames/)?$
  action recurse
end match
match /(branches|tags)/KDE/[^/]+/(kdegames/)?$
  action recurse
end match


### Branches ###
match /branches/KDE_(\d+)_(\d+)_BRANCH/kdegames/kbattleship/
    repository knavalbattle
    branch KDE/\1.\2
end match
match /branches/KDE/(\d+)\.(\d+)/kdegames/kbattleship/
    repository knavalbattle
    branch KDE/\1.\2
end match

match /branches/KDE_(\d+)_(\d+)_BRANCH/kdegames/doc/kbattleship/
    repository knavalbattle
    branch KDE/\1.\2
    prefix doc/
end match
match /branches/KDE/(\d+)\.(\d+)/kdegames/doc/kbattleship/
    repository knavalbattle
    branch KDE/\1.\2
    prefix doc/
end match

# Feature branches
#TODO

### Tags ###
match /tags/KDE/(\d+)\.(\d+)/kdegames/kbattleship/
    repository knavalbattle
    branch refs/tags/v\1.\2.0
    annotated true
end match
match /tags/KDE/(\d+)\.(\d+)\.(\d+)/kdegames/kbattleship/
    repository knavalbattle
    branch refs/tags/v\1.\2.\3
    annotated true
end match


# Some tag stuff
include ../common-kde-tags-rules

declare MODULE_RECURSE=(kdegames/)?
include ../feature-branches

match /
end match

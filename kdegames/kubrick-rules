# Created by Parker Coates <parker.coates@kdemail.net>
#
# Kubrick is a relatively new application, so run svn2git with the following option:
#    --resume-from=776437
#
# These rules are 100% copied from killbots-rules, so if you find a mistake here,
# please also fix it there.

# Create the kubrick repository
create repository kubrick
end repository

# Set the REPO and MODULE variables, used by some included rules
declare REPO=kubrick
declare MODULE=kdegames/kubrick

# Ignore some things that are known to cause trouble
include ../common-kde-ignores

# Get sources and docs from playground
match /trunk/playground/games/kubrick/
    repository kubrick
    branch master
end match
match /trunk/playground/games/doc/kubrick/
    repository kubrick
    branch master
    prefix doc/
end match

# Get sources and docs from kdereview
match /trunk/kdereview/kubrick/
    repository kubrick
    branch master
end match
match /trunk/kdereview/doc/kubrick/
    repository kubrick
    branch master
    prefix doc/
end match

# Get sources and docs from the kdegames module
match /trunk/KDE/kdegames/kubrick/
    repository kubrick
    branch master
end match
match /trunk/KDE/kdegames/doc/kubrick/
    repository kubrick
    branch master
    prefix doc/
end match

# Recurse into branch and tag changes that may have affected us
match /(branches|tags)/KDE/\d+[^/]+/(kdegames/)?$
  action recurse
end match

# Get sources and docs from branches
match /branches/KDE/(\d+)\.(\d+)/kdegames/kubrick/
    repository kubrick
    branch KDE/\1.\2
end match
match /branches/KDE/(\d+)\.(\d+)/kdegames/doc/kubrick/
    repository kubrick
    branch KDE/\1.\2
    prefix doc/
end match

# Get tags
match /tags/KDE/(\d+)\.(\d+)/kdegames/kubrick/
    repository kubrick
    branch refs/tags/v\1.\2.0
    annotated true
end match
match /tags/KDE/(\d+)\.(\d+)\.(\d+)/kdegames/kubrick/
    repository kubrick
    branch refs/tags/v\1.\2.\3
    annotated true
end match

# Some tag stuff
include ../common-kde-tags-rules

# Ignore everything else
match /
end match

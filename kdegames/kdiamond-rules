# Created by Stefan Majewsky <majewsky@gmx.net>
# Mostly copied from bomber-rules by Parker Coates
#
# KDiamond is a relatively new application, so run svn2git with the following option:
#    --resume-from=772506

# Create the kdiamond repository
create repository kdiamond
end repository

# Set the REPO and MODULE variables, used by some included rules
declare REPO=kdiamond
declare MODULE=kdegames/kdiamond

# Ignore some things that are known to cause trouble
include ../common-kde-ignores

# Get sources and docs from playground
match /trunk/playground/games/kdiamond/
    repository kdiamond
    branch master
end match
match /trunk/playground/games/doc/kdiamond/
    repository kdiamond
    branch master
    prefix doc/
end match

# Get sources and docs from kdereview
match /trunk/kdereview/kdiamond/
    repository kdiamond
    branch master
end match
match /trunk/kdereview/doc/kdiamond/
    repository kdiamond
    branch master
    prefix doc/
end match

# Get sources and docs from the kdegames module
match /trunk/KDE/kdegames/kdiamond/
    repository kdiamond
    branch master
end match
match /trunk/KDE/kdegames/doc/kdiamond/
    repository kdiamond
    branch master
    prefix doc/
end match

# Recurse into branch and tag changes that may have affected us
match /(branches|tags)/KDE/\d+[^/]+/(kdegames/)?$
  action recurse
end match

# Get sources and docs from branches
match /branches/KDE/(\d+)\.(\d+)/kdegames/kdiamond/
    repository kdiamond
    branch KDE/\1.\2
end match
match /branches/KDE/(\d+)\.(\d+)/kdegames/doc/kdiamond/
    repository kdiamond
    branch KDE/\1.\2
    prefix doc/
end match

# Get tags
match /tags/KDE/(\d+)\.(\d+)/kdegames/kdiamond/
    repository kdiamond
    branch refs/tags/v\1.\2.0
    annotated true
end match
match /tags/KDE/(\d+)\.(\d+)\.(\d+)/kdegames/kdiamond/
    repository kdiamond
    branch refs/tags/v\1.\2.\3
    annotated true
end match

# Some tag stuff
include ../common-kde-tags-rules

# Custom code: Work branch
match /branches/work/kdiamond-4.2/
    repository kdiamond
    branch refs/workbranch/kdiamond-4.2
end match

# Ignore everything else
match /
end match

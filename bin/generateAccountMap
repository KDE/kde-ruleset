#!/bin/sh

ACCOUNTSTMP=`mktemp`
DISABLEDTMP=`mktemp`

svn export -q  svn://anonsvn.kde.org/home/kde/trunk/kde-common/accounts $ACCOUNTSTMP
svn export -q  svn://anonsvn.kde.org/home/kde/trunk/kde-common/disabled-accounts $DISABLEDTMP

IFS="
"

echo -n > account-map

process_file () {
	for person in `cat $1`; do
		LINE=`echo $person | sed -e "s/\>[[:blank:]]*\</ /g;\
			s/[[:graph:]]*@[[:graph:]]*/<&>/" -`
		echo $LINE >> account-map
	done
}

process_file $ACCOUNTSTMP
process_file $DISABLEDTMP

trap "rm -f $ACCOUNTSTMP $DISABLEDTMP" EXIT

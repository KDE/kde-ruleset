#!/bin/sh

process_list () {
	sed -e "s/\>[[:blank:]]*\</ /g;\
	        s/[[:graph:]]*@[[:graph:]]*/<&>/" -
}


{
	echo "# This file was generated by bin/generateAccountMap"
	echo "# Don't edit by hand."

	echo;
	echo "# accounts"
	svn cat svn://anonsvn.kde.org/home/kde/trunk/kde-common/accounts

	echo;
	echo "# disabled-accounts"
	svn cat svn://anonsvn.kde.org/home/kde/trunk/kde-common/disabled-accounts
} | process_list > account-map
